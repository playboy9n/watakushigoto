<%= form_with(model: diary, local: true) do |form| %>
  <div class="field">
    <%= form.label :diary_title %>
    <%= form.text_field :diary_title %>
  </div>

  <div class="field">
    <%= form.label :diary_body %>
    <%= form.text_area :diary_body %>
  </div>

  <div class="field">
    <%#= form.attachment_field :diary_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
