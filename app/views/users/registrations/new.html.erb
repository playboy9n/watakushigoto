<div class='container'>
  <div class='row'>
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <img src='' class='preview_cicle'>
      <%= f.attachment_field :profile_image, class: 'attach' %>

      <div class="field">
        <%= f.label 'id' %>
        <%= f.text_field :nick_name %>
      <br>
        <%= f.label 'ユーザー名' %>
        <%= f.text_field :user_name %>
      </div>
      <div class='field'>
        <%= f.label '姓' %>
        <%= f.text_field :family_name %>
        <%= f.label '名' %>
        <%= f.text_field :my_name %>
      </div>
      <div class='field kana'>
        <%= f.label 'ｾｲ' %>
        <%= f.text_field :k_family_name %>
        <%= f.label 'ﾒｲ' %>
        <%= f.text_field :k_my_name %>
      </div>
      <div class='field'>
        <%= f.label 'biography' %>
        <br>
        <%= f.text_area :biography, placeholder: '後からでも設定できます！', size: '30x4' %>
      </div>
      <div class='field'>
        <%= f.label 'BD' %>
        <%= f.date_field :bd %>
      </div>
      <div class='field'>
        <label><%= f.radio_button :gender, '男' %> ♂ </label>
        <label><%= f.radio_button :gender, '女' %>♀</label>
        <label><%= f.radio_button :gender, '秘密' %>内緒</label>
      </div>
      <div class='field'>
        <%= f.label '電話番号' %>
        <%= f.text_field :phone_number %>
      </div>
      <div class='field'>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
      </div>
      <div class='field password'>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: 'new-password ' %>
      </div>
      <div class='field password'>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
      </div>
        <div class='actions'>
          <%= f.submit 'Sign up' %>
        </div>
    <% end %>
    <%= render 'users/shared/links' %>
  </div>
</div>
<%= render 'users/preview_user' %>
