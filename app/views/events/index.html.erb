<div class="container">
  <h1>Events</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>内容</th>
        <th>Start</th>
        <th>End</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr data-href=<%= edit_event_path(event) %>>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.start %></td>
          <td><%= event.end %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'カレンダーから消えちゃうよ！' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
