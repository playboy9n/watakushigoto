<!DOCTYPE html>
<html>
  <head>
    <title>わたくしごと！</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
      <!--   ↓これでjQueryが後に来るようになっていた -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
    <script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.js"></script>
    <meta name="turbolinks-cache-control" content="no-cache">
  </head>

  <body class="head-body">
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbarEexample8">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
              <div class="dark"></div>
              <span id='watakushigoto'>わたくしごと！</span>
            </a>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample8">
            <ul class="nav navbar-nav navbar-right">
              <% if admin_signed_in? %>
                <li><%= link_to 'マイページ', top_path %></li>
                <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
                <li><%= link_to 'ABOUT', about_path%></li>
              <% elsif user_signed_in? %>
                <li>
                  <%= link_to attachment_image_tag(@user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: 'no_image.jpg', size:'100x100'), user_path(current_user.id), id:'mypage_li', class: ' user_link img-circle profile-thumb my-img' %>
                </li>
                <li id='logout_li' class='user_link'>
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
                </li>
                <li id='about_li' class='user_link'>
                  <%= link_to 'ABOUT', about_path%>
                </li>
              <% else %>
                <li><%= link_to "ログイン", new_user_session_path %></li>
                <li><%= link_to "新規登録", new_user_registration_path %></li>
                <li><%= link_to 'ABOUT', about_path%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
     <footer>
     <!-- <small>＆copy; 2018 大槻 inc.</small> -->
     </footer>
  </body>


</html>
